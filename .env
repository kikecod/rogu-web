# API Configuration
# URL base de la API del backend (incluye /api)
VITE_API_BASE_URL=http://localhost:3000/api

# URL del servidor (sin /api, para imágenes y archivos estáticos)
VITE_SERVER_URL=http://localhost:3000

# Debug y timeouts del módulo de perfil
# Muestra en consola la respuesta cruda de /api/profile (true/false)
VITE_DEBUG_PROFILE=false
# Tiempo para marcar error "timeout" suave (ms)
VITE_PROFILE_TIMEOUT_MS=3000
# Corte duro de espera (ms) para garantizar que aparezca un error
VITE_PROFILE_HARD_TIMEOUT_MS=5000
